{% extends '_template.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1 class="title has-text-centered">Connexion</h1>
<div class=" columns is-centered section">
    <div class="column is-half">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}
        <div class="field">
            <label class="label" for="inputEmail">Email</label>
            <div class="control">
                <input class="input" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
        </div>
    
        <div class="field">
            <label class="label" for="inputPassword">Mot de passe</label>
            <div class="controls">
                <input class="input"type="password" name="password" id="inputPassword" class="form-control" required>  
            </div>
        </div>
    

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="button is-primary" type="submit">
            Connexion
        </button>
    </form>
    </div>
</div>
{% endblock %}
